<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Platform Icon -->
        <ImageView
            android:id="@+id/platformIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/platform_icon"
            android:src="@drawable/ic_notification"
            android:tint="@android:color/white" />

        <!-- Block Icon -->
        <TextView
            android:id="@+id/blockIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸš«"
            android:textSize="64sp"
            android:layout_marginBottom="24dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/blockTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/short_video_blocked"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Platform Name -->
        <TextView
            android:id="@+id/platformName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:text="YouTube Shorts" />

        <!-- Message -->
        <TextView
            android:id="@+id/blockMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/block_message"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="32dp"
            android:maxWidth="300dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoBack"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/go_back"
                android:layout_marginBottom="12dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDisable30Min"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/disable_30_min"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
