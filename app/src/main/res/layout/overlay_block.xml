<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <TextView
        android:id="@+id/blockIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸš«"
        android:textSize="64sp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/blockTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/short_video_blocked"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/blockMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/block_message"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="32dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_back"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnDisable30Min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disable_30_min" />
    </LinearLayout>

</LinearLayout>
